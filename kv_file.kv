MDBackdrop:
    id:back_drop
    left_action_items: [['menu', lambda x: self.open()]]
    title:'Password Manager'
    header_text:''
    front_layer_color:app.theme_cls.bg_darkest
    MDBackdropBackLayer:
        padding:dp(20)
        MDCard:
            size_hint: 1,None
            height:root.height/2
            pos_hint:{'center_y':.7}

            elevation:30
            radius:[25,]
            padding:20
            orientation: 'vertical'
            MDGridLayout:
                cols:1
                spacing:dp(10)
                MDBoxLayout:
                    adaptive_height:True
                    MDLabel:
                        size_hint_x:None
                        width:root.width/3
                        text:'Dark Theme'
                        font_style:'Button'
                        font_size:dp(20)
                        
                    MDSwitch:
                        id: switch
                        pos_hint:{'center_y':.5}
                        on_active:app.change_theme()
               





    MDBackdropFrontLayer:
        ShowPassword:
       
                        
        

<ShowPassword>
    name:'ShowPassword'
    MDBottomNavigation:
        panel_color: app.theme_cls.bg_light
        
        MDBottomNavigationItem:
            name: 'MainPage'
            text: 'Main Page'
            icon: 'home'
            
            # MDCard:
            #     md_bg_color:.2,.5,.1,1
            ScreenManager:
                transition: RiseInTransition()
                id:new_screen_manger
                DetailsScreen:
                MainPage:
                

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'C++'
            icon: 'language-cpp'

            
            MDLabel:
                text: 'I programming of C++'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'JS'
            icon: 'language-javascript'

            ProfileScreen:

<MainPage>:
    id:MainPage 
    name:'MainPage'
    MDBoxLayout:
        MDCard:
            md_bg_color:app.theme_cls.bg_darkest
            orientation: 'vertical'
            padding: ('15dp', '0dp', '15dp', '15dp')
            spacing: dp(15)
            MDBoxLayout:
                size_hint:1,.15
                orientation: 'vertical'
                MDCard:
                    radius:[25,]
                    md_bg_color:app.theme_cls.bg_light
                    elevation:25
                    MDLabel:
                        text:'Categories'
                        halign:'center'
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_color
                        font_name:'font/Austein.ttf'
                        font_size:dp(48)
                        

            MDGridLayout:
                id: mainPageCard
                cols:2
                spacing: dp(15)
                MDCard:
                    md_bg_color:app.theme_cls.bg_light
                    size_hint: .5,None
                    elevation:15
                    radius:dp(20)                 
                    height:self.parent.height/3
                    orientation: 'vertical'
                    padding:dp(20)
                    MDIcon:
                        icon:'facebook'
                        font_size:dp(100)
                        halign:'center'
                        size_hint: 1,.8
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                        # pos_hint:{}
                    MDSeparator:
                    MDLabel:
                        size_hint: 1,.2
                        text:'Facebook'
                        halign:'center'
                        font_size:dp(20)
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                        
                        
                        
                MDCard:
                    md_bg_color:app.theme_cls.bg_light
                    size_hint: .5,None
                    elevation:15
                    radius:dp(20)                 
                    height:self.parent.height/3
                    orientation: 'vertical'
                    padding:dp(20)
                    on_release:root.manager.current = 'DetailsScreen'
                    MDIcon:
                        icon:'google'
                        font_size:dp(100)
                        halign:'center'
                        size_hint: 1,.8
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                        # pos_hint:{}
                    MDSeparator:
                    MDLabel:
                        size_hint: 1,.2
                        text:'Google'
                        halign:'center'
                        font_size:dp(20)
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark

                         

<ProfileScreen>
    name:'ProfileScreen'
    MDCard:
        # elevation:50
        md_bg_color:app.theme_cls.bg_darkest
        # height:app.w[1]/1.3
        width:app.w[0]
        padding: ('20dp', '0dp', '20dp', '5dp')
        spacing:10
        orientation: 'vertical'
        
        ScrollView:
            size_hint_y:1
            MDCard:
                elevation:20
                padding: ('20dp', '0dp', '20dp', '20dp')
                size_hint_y:None
                height:root.height
                md_bg_color:app.theme_cls.bg_darkest
                
                MDGridLayout:
                    cols:1
                    spacing:10
                    
                    MDBoxLayout:
                        spacing:15
                        MDCard:
                            elevation:10
                            radius:[36,]
                            pos_hint:{'top':1}
                            elevation:20
                            FitImage:
                                radius:[36,]
                                source:'src/profile_pic/front.jpeg'
                        MDBoxLayout:
                            adaptive_height:True
                            pos_hint:{'top':.8}
                            orientation: 'vertical'
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:app.theme_cls.primary_dark
                                text:'M. Tariq Tahir'
                                font_name: 'font/Chopsic-K6Dp.ttf'
                                font_size:dp(30)
                                adaptive_height:True
                            MDLabel:
                                theme_text_color:'Custom'
                                
                                adaptive_height:True
                                text:'\nSoftware Devaloper\n'
                                font_size:dp(15)

                    MDCard:
                        # md_bg_color:1,1,1,1
                        elevation:15
                        radius:[20,]
                        padding: ('20dp', '0dp', '20dp', '20dp')
                        # adaptive_height:True
                        size_hint_y:None
                        height: dp(160)
                        orientation: 'vertical'
                        # spacing:10
                        MDGridLayout:
                            cols:1
                            spacing: 5
                            padding: ('0dp', '20dp', '0dp', '0dp')
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:app.theme_cls.primary_dark
                                text:'Skills'
                                font_name: 'font/Chopsic-K6Dp.ttf'
                                font_size:dp(20)
                                adaptive_height:True
                            MDLabel:
                                theme_text_color:'Custom'
                                text:'I can make Professional Looking Android Apps, Windows Software and Website etc..\nI can Work in Following Language \n -> Python  -> javascript \n -> Php -> VBA'
                                adaptive_height:True
                                font_size:dp(15)
                    MDCard:
                        # md_bg_color:1,1,1,1
                        elevation:15
                        radius:[20,]
                        padding: ('20dp', '0dp', '20dp', '20dp')
                        # adaptive_height:True
                        size_hint_y:None
                        height: dp(160)
                        orientation: 'vertical'
                        # spacing:10
                        MDGridLayout:
                            cols:1
                            spacing: 10
                            padding: ('0dp', '20dp', '0dp', '0dp')
                            MDLabel:
                                theme_text_color:'Custom'
                                text_color:app.theme_cls.primary_dark
                                text:'Phone / Email'
                                font_name: 'font/Chopsic-K6Dp.ttf'
                                font_size:dp(20)
                                adaptive_height:True
                        
                            MDGridLayout:
                                cols:3
                                MDIconButton:
                                    icon:'email'
                                MDLabel:
                                    id:email
                                    text_color:app.theme_cls.primary_dark
                                    text:'tariqtahir43@gmail.com '
                                    font_size:dp(15)
                                MDIconButton:
                                    icon:'content-copy'
                                    on_release:
                                        Clipboard.copy(email.text)
                                        app.snackbar_show(('Copied '+str(email.text)))

                                MDIconButton:
                                    icon:'whatsapp'
                                MDLabel:
                                    id:phone
                                    text_color:app.theme_cls.primary_dark
                                    text:'0304 075 5464 '
                                    font_size:dp(15)
                                MDIconButton:
                                    icon:'content-copy'
                                    on_release:
                                        Clipboard.copy(phone.text)
                                        app.snackbar_show(('Copied '+str(phone.text)))
                                        # app.show_toast('Copied '+str(phone.text))

