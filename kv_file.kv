<CardMain>
    size_hint_y:None    
    elevation:15
    radius:dp(15)

<MainPage@Screen>
    name:'MainPage'
    MDBoxLayout:
        orientation: 'vertical'
        # padding: ('20dp', '0dp', '20dp', '0dp')
        MDBoxLayout:
            size_hint_y:.1   
            padding:dp(25),dp(0)     
            # padding:10
