#: set font_name  'font/BlaakThin_PERSONAL.ttf'

<Eidt_details>
    radius:[20,]
    padding: ('0dp', '0dp', '0dp', '15dp')
    orientation: 'vertical'
    size_hint:1,None
    height:app.w[1]/3.5
    pos_hint:{'center_y':.5}
    MDBoxLayout:
        adaptive_height:True
        size_hint_y:.15
        MDLabel:
            text:'Edit Details'
            adaptive_height:True
            theme_text_color:'Custom'
            text_color:app.theme_cls.primary_color
            pos_hint:{'center_y':.8}
        MDLabel:
            text:'Edit Details'
            size_hint_x:.0001
            id:edit_key
            adaptive_height:True
            theme_text_color:'Custom'
            text_color:app.theme_cls.bg_light
            pos_hint:{'center_y':.8}
        MDLabel:
            text:'Edit Details'
            id:edit_category
            size_hint_x:.0001
            adaptive_height:True
            theme_text_color:'Custom'
            text_color:app.theme_cls.bg_light
            pos_hint:{'center_y':.8}
        MDIconButton:
            icon:'check-circle-outline'
            on_press:app.update_details(edit_key.text,edit_category.text,edit_hint.text,edit_email.text,edit_pass.text)
            adaptive_height:True
    MDGridLayout:
        cols:2
        MDIcon:
            icon:'comment-text-outline'
            size_hint_x:.15
        MDTextField:
            max_text_length: 20
            on_text: app.text_replace(self,20)
            id:edit_hint
            size_hint_y:1
        MDIcon:
            icon:'email'
            size_hint_x:.15
        MDTextField:
            max_text_length: 20
            on_text: app.text_replace(self,20)
            id: edit_email
            size_hint_y:1
        MDIcon:
            icon:'key'
            size_hint_x:.15
        MDTextField:
            max_text_length: 20
            on_text: app.text_replace(self,20)
            id:edit_pass
            size_hint_y:1
        

<Add_Credentials>
    radius:[20,]
    padding: ('0dp', '0dp', '0dp', '15dp')
    orientation: 'vertical'
    size_hint:1,None
    height:app.w[1]/3.5
    pos_hint:{'center_y':.5}
    MDBoxLayout:
        adaptive_height:True
        size_hint_y:.15
        MDLabel:
            text:'Edit Details'
            adaptive_height:True
            theme_text_color:'Custom'
            text_color:app.theme_cls.primary_color
            pos_hint:{'center_y':.8}
        MDIconButton:
            icon:'plus-circle-outline'
            on_press:
                app.add_credentials_dialog.dismiss()
                app.add_credentials(add_hint.text,add_email.text,add_pass.text)
            adaptive_height:True
    MDGridLayout:
        cols:2
        MDIcon:
            icon:'comment-text-outline'
            size_hint_x:.15
        MDTextField:
            required:True
            max_text_length: 20
            on_text: app.text_replace(self,20)
            id:add_hint
            hint_text:'Type Hint'
            size_hint_y:1
        MDIcon:
            icon:'email'
            size_hint_x:.15
        MDTextField:
            required:True
            max_text_length: 20
            on_text: app.text_replace(self,20)
            id: add_email
            hint_text:'Type Email'
            size_hint_y:1
        MDIcon:
            icon:'key'
            size_hint_x:.15
        MDTextField:
            required:True
            max_text_length: 20
            on_text: app.text_replace(self,20)
            id:add_pass
            hint_text:'Type Password'
            size_hint_y:1
        


<Category_content>
    orientation: "vertical"
    # spacing: "12dp"
    padding:0
    pos_hint:{'center_y':.56}
    size_hint_y: None
    height: dp(app.w[1]/2.3)
    MDGridLayout:
        cols:1
        spacing: '10dp'
        MDTextField:
            id:category_text
            adaptive_height:True
            max_text_length: 10
            on_text: app.text_replace(self,10)
            hint_text:'Type Category Name'
            font_name:font_name
            required:True
        MDLabel:
            text:'SELECT ICON'
            font_style:'Button'
            font_size:sp(15)
            theme_text_color:'Custom'
            text_color:app.theme_cls.primary_color
            adaptive_height:True
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height:True
                OneLineIconListItem:
                    text: "Google"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "google"
                OneLineIconListItem:
                    text: "Facebook"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "facebook"
                OneLineIconListItem:
                    text: "Yahoo"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "yahoo"
                OneLineIconListItem:
                    text: "Microsoft"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "microsoft"
                OneLineIconListItem:
                    text: "Other"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "heart"
        MDBoxLayout:
            size_hint_y:.2
            # adaptive_height:True
            # md_bg_color:.2,.8,.1,1
            AnchorLayout:
                anchor_x:'right'
            MDFlatButton:
                text:'ADD'
                adaptive_width:True
                theme_text_color:'Custom'
                text_color:app.theme_cls.primary_color
                on_release:
                    app.category_dialog.dismiss()
                    app.add_category(category_text)
            MDFlatButton:
                text:'Cancel'
                adaptive_width:True
                theme_text_color:'Custom'
                text_color:app.theme_cls.primary_color
                on_release:app.category_dialog.dismiss()          


