<Category_content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: app.w[1]/2
    MDGridLayout:
        cols:1
        spacing: '10dp'
        MDTextField:
            id:category_text
            adaptive_height:True
            hint_text:'Type Category Name'
            required:True
        MDLabel:
            text:'SELECT ICON'
            theme_text_color:'Custom'
            text_color:app.theme_cls.primary_color
            adaptive_height:True
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height:True
                OneLineIconListItem:
                    text: "Google"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "google"
                OneLineIconListItem:
                    text: "Facebook"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "facebook"
                OneLineIconListItem:
                    text: "Yahoo"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "yahoo"
                OneLineIconListItem:
                    text: "Microsoft"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "microsoft"
                OneLineIconListItem:
                    text: "Other"
                    on_release:
                        app.selected_category=self.text
                        category_text.text=self.text
                    IconLeftWidget:
                        icon: "heart"
        MDBoxLayout:
            adaptive_height:True
            # md_bg_color:.2,.8,.1,1
            AnchorLayout:
                anchor_x:'right'
            MDFlatButton:
                text:'ADD'
                adaptive_width:True
                theme_text_color:'Custom'
                text_color:app.theme_cls.primary_color
                on_release:
                    app.category_dialog.dismiss()
                    app.add_category(category_text)
            MDFlatButton:
                text:'Cancel'
                adaptive_width:True
                theme_text_color:'Custom'
                text_color:app.theme_cls.primary_color
                on_release:app.category_dialog.dismiss()          


