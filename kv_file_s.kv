<MDCard>
    elevation:15
    radius:[20,]
    orientation: 'vertical'

<ClickableMDIcon>:
    # md_bg_color:.5,.5,.5,1
    theme_text_color:'Custom'
    text_color:app.theme_cls.primary_color
    adaptive_size:True
    
    

MDCard:
    padding:20

    

    MDGridLayout:
        cols:2
        spacing:15
        MDCard:
            padding: ('10dp', '5dp', '10dp', '4dp')
            size_hint_y:None
            height:root.height/5
            ClickableMDIcon:
                icon:'delete'
                pos_hint:{'center_x':.85}
                size_hint_y:.2            
            ClickableMDIcon:
                icon:'facebook'
                size_hint_y:.5            
                font_size:sp(64)
                pos_hint:{'center_x':.5}
            MDSeparator:

            # MDBoxLayout:
            #     size_hint_y:.2            
            #     # adaptive_height:True
            MDLabel:
                size_hint_y:.2            
                text:'Facebook'
                pos_hint:{'center_y':.5}
                theme_text_color:'Custom'
                text_color:app.theme_cls.primary_color
                # adaptive_height:True
                halign:'center'

            
        MDCard:
            size_hint_y:None
            height:root.height/5
            