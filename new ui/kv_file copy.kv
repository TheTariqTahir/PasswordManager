
<ProfileContent>
    



ScreenManager:
    id : screen_manager
    
    ProductsPage:
    AboutPage:
    MainPage:
    WelcomeScreen:
    ProfilePage:


<WelcomeScreen>
    name:'WelcomeScreen'
    
    MDBoxLayout:
        orientation: 'vertical'    
        md_bg_color: .5,.8,.8,1
        MDLabel:
            text:'Loading'
            halign:'center'
            font_name: 'font/Gang Bangers.ttf'
            font_size:dp(60)

        

<MainPage>
    name:'MainPage'
    MDBoxLayout:
        
        MDCard:
            orientation: 'vertical'
            md_bg_color:app.theme_cls.bg_darkest
            padding: ('15dp', '25dp', '15dp', '15dp')
            spacing: dp(15)
            MDBoxLayout:
                size_hint:1,.15
                orientation: 'vertical'
                MDCard:
                    radius:[25,]
                    md_bg_color:app.theme_cls.bg_light
                    elevation:25
                    on_release:app.change_theme()
                    MDLabel:
                        text:'Password Manager'
                        halign:'center'
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_color
                        font_name:'font/Austein.ttf'
                        font_size:dp(48)
                        

            MDGridLayout:
                id: mainPageCard
                cols:2
                spacing: dp(15)
                MDCard:
                    md_bg_color:app.theme_cls.bg_light
                    size_hint: .5,None
                    elevation:15
                    radius:dp(20)                 
                    height:self.parent.height/3
                    orientation: 'vertical'
                    padding:dp(20)
                    MDIcon:
                        icon:'facebook'
                        font_size:dp(100)
                        halign:'center'
                        size_hint: 1,.8
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                        # pos_hint:{}
                    MDSeparator:
                    MDLabel:
                        size_hint: 1,.2
                        text:'Facebook'
                        halign:'center'
                        font_size:dp(20)
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                        
                        
                        
                MDCard:
                    md_bg_color:app.theme_cls.bg_light
                    size_hint: .5,None
                    elevation:15
                    radius:dp(20)                 
                    height:self.parent.height/3
                    orientation: 'vertical'
                    padding:dp(20)
                    MDIcon:
                        icon:'google'
                        font_size:dp(100)
                        halign:'center'
                        size_hint: 1,.8
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                        # pos_hint:{}
                    MDSeparator:
                    MDLabel:
                        size_hint: 1,.2
                        text:'Google'
                        halign:'center'
                        font_size:dp(20)
                        theme_text_color:'Custom'
                        text_color:app.theme_cls.primary_dark
                       
                        
                        
            

<ProductsPage>
    name:'ProductsPage'
    MDBackdrop:
        left_action_items: [['menu', lambda x: self.open()]]
        title:'Password Manager'
        header_text:''
        front_layer_color:app.theme_cls.bg_darkest
        MDBackdropBackLayer:
            padding:dp(20)
            MDCard:
                size_hint: 1,None
                height:root.height/2
                pos_hint:{'center_y':.7}

                elevation:30
                radius:[25,]
                padding:20
                orientation: 'vertical'
                MDGridLayout:
                    cols:1
                    spacing:dp(10)
                    MDBoxLayout:
                        adaptive_height:True
                        MDLabel:
                            size_hint_x:None
                            width:root.width/3
                            text:'Dark Theme'
                            font_style:'Button'
                            font_size:dp(20)
                            
                        MDSwitch:
                            id: switch
                            pos_hint:{'center_y':.5}
                            on_active:app.change_theme()
                    MDSeparator:
                    MDRaisedButton:
                        text:'About Devaloper'
                        font_style:'Button'
                        # font_size:dp(20)
                        # adaptive_height:True
                        on_release:app.show_bottom_sheet()


        MDBackdropFrontLayer:
            ScreenManager:
                id:new_screen_manger
                ProfileScreen:
                BackDropFront:
                            
            

<AboutPage>
    name:'AboutPage'
    MDBoxLayout:
        
        padding:40
        md_bg_color:app.theme_cls.primary_color
        spacing:20
            
        MDCard:
            size_hint: 1,None
            height:root.height/2
            pos_hint:{'center_y':.5}

            elevation:30
            radius:[25,]
            padding:20
            orientation: 'vertical'
            MDGridLayout:
                cols:1
                spacing:dp(10)
                MDBoxLayout:
                    adaptive_height:True
                    MDLabel:
                        size_hint_x:None
                        width:root.width/3
                        text:'Dark Theme'
                        font_style:'Button'
                        font_size:dp(20)
                        
                    MDSwitch:
                        id: switch
                        pos_hint:{'center_y':.5}
                        on_active:app.change_theme()
                MDSeparator:
                MDRaisedButton:
                    text:'About Devaloper'
                    font_style:'Button'
                    # font_size:dp(20)
                    # adaptive_height:True
                    on_release:app.show_bottom_sheet()
                
                            
    
